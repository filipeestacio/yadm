{
  "$schema": "https://opencode.ai/config.json",
  "theme": "one-dark",
  "autoupdate": true,
  "permission": {
    "*": "allow",
    "bash": {
      "git push --delete main": "deny",
      "git push -d main": "deny",
      "git push origin :main": "deny",
      "rm -rf": "deny",
    },
  },
  "plugin": [],
  "enabled_providers": [
    "github-copilot"
  ],
  "model": "github-copilot/gpt-5.2-codex",
  "small_model": "github-copilot/gpt-5-mini",
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": true,
    },
  },
}
